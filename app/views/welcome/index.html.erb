<h1>Welcome to Wikiful</h1>

<h2>These are the five most recent articles</h2>
<% @recent_articles.each do |article| %>
	<div class="article-index">
		<h3><%= link_to article.title, article %></h3>
		<p><em>Published on <%= article.created_at.strftime(' %b %d, %Y') %></em></p>
		<p>Filed under: <% article.categories.each do |category| %>
			<span class="label label-info"><%= link_to category.title, category %></span>
			<% end %>		
		</p>
		<p><%= truncate(article.content, length: 100) %></p>
	</div>
<% end %>